<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tyressory.slapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mobilehome"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".userTerms"
            android:label="User Terms"
            android:parentActivityName=".UserActivity">

        </activity>
        <activity
            android:name=".DriverSettingsActivity"
            android:label="@string/title_activity_driver_settings"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_driver_profile"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DriverTermsActivity"
            android:label="Driver"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user_main"
             />

        <activity android:name=".MapsActivity" />
        <activity
            android:name=".forgotPasswordActivity"
            android:label="@string/title_activity_driver_forgotPassword"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".signUp"
            android:label="@string/title_activity_driver_signUp" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>