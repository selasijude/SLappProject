<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.abhiandroid.GoogleMaps.googlemaps.MapsActivity"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp">

        <ToggleButton
            android:id="@+id/userLocation"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textOn="Location On"
            android:textOff="Location Off"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="#0BB0D1"
            />

        <TextView
            android:id="@+id/statusDisplay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="70dp"
            android:hint="Status Unavailable"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="22sp"
            />



    </LinearLayout>

</RelativeLayout>